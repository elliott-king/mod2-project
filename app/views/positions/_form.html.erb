<% if flash[:errors] %>
<ul>
    <% flash[:errors].each do |e| %>
        <li><%= e %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @position do |f| %>

<%= f.label :title %>
<%= f.text_field :title %><br>

<%= f.label :location %>
<%= f.text_field :location %><br>

<%= f.label :description %>
<%= f.text_area :description %><br>

<%= f.label :how_to_apply %>
<%= f.text_field :how_to_apply %><br>

<%= f.label :position_type %>
<%= f.text_field :position_type %><br>

<%= f.submit %>

<% end %>

