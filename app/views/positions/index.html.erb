<div class="position-container">
<%= form_tag positions_path, method: "get" do |fb| %>
  <%= label_tag :query, "Search for Jobs" %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
<% @positions.each do |p| %>
  
    <% message = "#{p.title}: #{p.location}" %>
    <li><%= link_to message, position_path(p) %></li><br>
  
<% end %>
</ul>

</div>